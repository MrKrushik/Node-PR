    <script>
        // Game variables
        let score = 0;
        let speed = 100;
        let fuel = 100;
        let distance = 0;
        let coins = 0;
        let timeLeft = 60;
        let gameRunning = true;
        let playerPosition = 45; // percentage
        let obstacles = [];
        let coinItems = [];
        let gameInterval;
        let obstacleSpeed = 3;
        let nitroCharges = 3;
        
        // DOM elements
        const raceTrack = document.getElementById('raceTrack');
        const playerCar = document.getElementById('playerCar');
        const scoreElement = document.getElementById('score');
        const speedElement = document.getElementById('speed');
        const fuelFill = document.getElementById('fuelFill');
        const distanceElement = document.getElementById('distance');
        const coinsElement = document.getElementById('coins');
        const timeElement = document.getElementById('time');
        const gameOverScreen = document.getElementById('gameOver');
        const finalScoreElement = document.getElementById('finalScore');
        const restartBtn = document.getElementById('restartBtn');
        const nitroBtn = document.getElementById('nitroBtn');
        const nitroSmallBtn = document.getElementById('nitroSmallBtn');
        const refuelBtn = document.getElementById('refuelBtn');
        
        // Control buttons
        const leftBtn = document.getElementById('leftBtn');
        const rightBtn = document.getElementById('rightBtn');
        
        // Initialize game
        function initGame() {
            score = 0;
            speed = 100;
            fuel = 100;
            distance = 0;
            coins = 0;
            timeLeft = 60;
            gameRunning = true;
            playerPosition = 45;
            obstacles = [];
            coinItems = [];
            obstacleSpeed = 3;
            nitroCharges = 3;
            
            updateUI();
            playerCar.style.left = playerPosition + '%';
            gameOverScreen.style.display = 'none';
            nitroBtn.disabled = false;
            nitroBtn.innerHTML = '<i class="fas fa-fire"></i> NITRO BOOST (' + nitroCharges + ')';
            
            // Clear any existing obstacles and coins
            document.querySelectorAll('.obstacle, .coin').forEach(el => el.remove());
            
            // Start game intervals
            clearInterval(gameInterval);
            gameInterval = setInterval(updateGame, 50);
            
            // Start spawning objects
            spawnObjects();
            
            // Start countdown timer
            startTimer();
        }
        
        // Update game state
        function updateGame() {
            if (!gameRunning) return;
            
            // Update distance based on speed
            distance += speed / 100;
            
            // Update fuel (consumption based on speed)
            fuel -= speed / 1000;
            if (fuel <= 0) {
                fuel = 0;
                gameOver();
            }
            
            // Update obstacles
            updateObstacles();
            
            // Update coins
            updateCoins();
            
            // Update UI
            updateUI();
        }
        
        // Spawn obstacles and coins
        function spawnObjects() {
            if (!gameRunning) return;
            
            // Spawn obstacle
            if (Math.random() < 0.3) {
                spawnObstacle();
            }
            
            // Spawn coin
            if (Math.random() < 0.4) {
                spawnCoin();
            }
            
            // Schedule next spawn
            setTimeout(spawnObjects, 500);
        }
        
        // Spawn a new obstacle
        function spawnObstacle() {
            const obstacle = document.createElement('div');
            obstacle.classList.add('obstacle');
            
            // Random lane (left, center, right)
            const lane = Math.floor(Math.random() * 3);
            let leftPos;
            if (lane === 0) leftPos = 32; // left lane
            else if (lane === 1) leftPos = 45; // center lane
            else leftPos = 58; // right lane
            
            obstacle.style.left = leftPos + '%';
            obstacle.style.top = '-30px';
            
            // Random color
            const colors = ['#666', '#888', '#444', '#555'];
            obstacle.style.background = `linear-gradient(to bottom, ${colors[Math.floor(Math.random() * colors.length)]}, #222)`;
            
            raceTrack.appendChild(obstacle);
            
            obstacles.push({
                element: obstacle,
                x: leftPos,
                y: -30,
                speed: obstacleSpeed + Math.random() * 2
            });
        }
        
        // Spawn a new coin
        function spawnCoin() {
            const coin = document.createElement('div');
            coin.classList.add('coin');
            
            // Random position
            const leftPos = 35 + Math.random() * 30;
            coin.style.left = leftPos + '%';
            coin.style.top = '-20px';
            
            raceTrack.appendChild(coin);
            
            coinItems.push({
                element: coin,
                x: leftPos,
                y: -20,
                speed: obstacleSpeed + Math.random()
            });
        }
        
        // Update all obstacles
        function updateObstacles() {
            for (let i = obstacles.length - 1; i >= 0; i--) {
                const obstacle = obstacles[i];
                obstacle.y += obstacle.speed;
                obstacle.element.style.top = obstacle.y + 'px';
                
                // Check collision with player
                if (
                    obstacle.y > 220 && obstacle.y < 280 &&
                    Math.abs(playerPosition - obstacle.x) < 5
                ) {
                    // Collision detected
                    obstacle.element.remove();
                    obstacles.splice(i, 1);
                    
                    // Reduce speed and fuel
                    speed = Math.max(50, speed - 20);
                    fuel = Math.max(0, fuel - 20);
                    
                    // Visual feedback
                    playerCar.style.background = 'linear-gradient(to right, #ff0000, #990000)';
                    setTimeout(() => {
                        playerCar.style.background = 'linear-gradient(to right, #ff3232, #cc0000)';
                    }, 300);
                    
                    // Check if game over
                    if (fuel <= 0) {
                        gameOver();
                    }
                    
                    continue;
                }
                
                // Remove if off screen
                if (obstacle.y > 350) {
                    obstacle.element.remove();
                    obstacles.splice(i, 1);
                    score += 5; // Bonus for avoiding obstacle
                }
            }
        }
        
        // Update all coins
        function updateCoins() {
            for (let i = coinItems.length - 1; i >= 0; i--) {
                const coin = coinItems[i];
                coin.y += coin.speed;
                coin.element.style.top = coin.y + 'px';
                
                // Check collision with player
                if (
                    coin.y > 220 && coin.y < 280 &&
                    Math.abs(playerPosition - coin.x) < 8
                ) {
                    // Coin collected
                    coin.element.remove();
                    coinItems.splice(i, 1);
                    
                    // Increase score and coins
                    score += 10;
                    coins++;
                    
                    // Visual feedback
                    playerCar.style.boxShadow = '0 0 25px #ffd700';
                    setTimeout(() => {
                        playerCar.style.boxShadow = '0 0 15px #ff3232';
                    }, 300);
                    
                    continue;
                }
                
                // Remove if off screen
                if (coin.y > 350) {
                    coin.element.remove();
                    coinItems.splice(i, 1);
                }
            }
        }
        
        // Move player car
        function moveCar(direction) {
            if (!gameRunning) return;
            
            if (direction === 'left') {
                playerPosition = Math.max(32, playerPosition - 5);
            } else {
                playerPosition = Math.min(58, playerPosition + 5);
            }
            
            playerCar.style.left = playerPosition + '%';
        }
        
        // Activate nitro boost
        function activateNitro() {
            if (!gameRunning || nitroCharges <= 0) return;
            
            nitroCharges--;
            speed += 50;
            fuel += 10; // Nitro gives some fuel back
            
            // Update nitro button
            nitroBtn.innerHTML = '<i class="fas fa-fire"></i> NITRO BOOST (' + nitroCharges + ')';
            if (nitroCharges <= 0) {
                nitroBtn.disabled = true;
            }
            
            // Visual effect
            playerCar.style.boxShadow = '0 0 30px #00ccff';
            speedElement.style.color = '#00ccff';
            
            // Reset after 2 seconds
            setTimeout(() => {
                speed = Math.max(100, speed - 50);
                playerCar.style.boxShadow = '0 0 15px #ff3232';
                speedElement.style.color = '#fff';
            }, 2000);
        }
        
        // Refuel car
        function refuelCar() {
            if (!gameRunning) return;
            
            fuel = Math.min(100, fuel + 30);
            score += 5;
            
            // Visual feedback
            refuelBtn.innerHTML = '<i class="fas fa-check"></i> REFUELED!';
            refuelBtn.style.background = 'linear-gradient(to right, #00cc00, #009900)';
            
            setTimeout(() => {
                refuelBtn.innerHTML = '<i class="fas fa-gas-pump"></i> Refuel Car';
                refuelBtn.style.background = 'linear-gradient(to right, #ff9900, #cc6600)';
            }, 2000);
        }
        
        // Start countdown timer
        function startTimer() {
            const timerInterval = setInterval(() => {
                if (!gameRunning) {
                    clearInterval(timerInterval);
                    return;
                }
                
                timeLeft--;
                if (timeLeft <= 0) {
                    timeLeft = 0;
                    gameOver();
                    clearInterval(timerInterval);
                }
                
                updateUI();
            }, 1000);
        }
        
        // Game over
        function gameOver() {
            gameRunning = false;
            finalScoreElement.textContent = score;
            gameOverScreen.style.display = 'flex';
            clearInterval(gameInterval);
        }
        
        // Update UI
        function updateUI() {
            scoreElement.textContent = score;
            speedElement.textContent = Math.floor(speed);
            fuelFill.style.width = fuel + '%';
            distanceElement.textContent = Math.floor(distance);
            coinsElement.textContent = coins;
            timeElement.textContent = timeLeft;
            
            // Change fuel color based on level
            if (fuel > 50) {
                fuelFill.style.background = 'linear-gradient(to right, #00cc00, #ff9900)';
            } else if (fuel > 20) {
                fuelFill.style.background = 'linear-gradient(to right, #ff9900, #ff6600)';
            } else {
                fuelFill.style.background = 'linear-gradient(to right, #ff6600, #ff3232)';
            }
        }
        
        // Event listeners for buttons
        leftBtn.addEventListener('click', () => moveCar('left'));
        rightBtn.addEventListener('click', () => moveCar('right'));
        nitroBtn.addEventListener('click', activateNitro);
        nitroSmallBtn.addEventListener('click', activateNitro);
        refuelBtn.addEventListener('click', refuelCar);
        restartBtn.addEventListener('click', initGame);
        
        // Keyboard controls
        document.addEventListener('keydown', (e) => {
            if (!gameRunning) return;
            
            switch(e.key) {
                case 'ArrowLeft':
                    moveCar('left');
                    break;
                case 'ArrowRight':
                    moveCar('right');
                    break;
                case ' ':
                case 'Spacebar':
                    activateNitro();
                    e.preventDefault();
                    break;
                case 'r':
                case 'R':
                    refuelCar();
                    break;
            }
        });
        
        // Initialize the game
        initGame();
    </script>
